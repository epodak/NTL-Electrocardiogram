				android:text=" "
				android:textColor="#ff041f39"
				android:textSize="8.5sp"/>
				
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:text=" "
				android:textColor="#ff041f39"
				android:textSize="8.5sp"/>
				
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="40dp"
				android:text=" "
				android:textColor="#ff041f39"
				android:textSize="8.5sp"/>
				
