	<ImageView 
	  	android:layout_width="match_parent"
	  	android:layout_height="match_parent"
	  	android:src="@drawable/group_bg"/>


	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="72dp"
			android:layout_marginLeft="7dp"
			android:background="@drawable/navigator_3controls_bg"
			android:gravity="center_vertical">
	
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4dp"
				android:background="@drawable/navigator_button_bg"
				android:text="V1"
				android:textColor="@android:color/white"
				android:textSize="11.52sp"
				android:gravity="center"
				android:onClick="singleClicked"/>
	
			<Button 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4dp"
				android:background="@drawable/navigator_button_bg"
				android:text="V2"
				android:textColor="@android:color/white"
				android:textSize="11.52sp"
				android:gravity="center"
				android:onClick="singleClicked"/>
	
			<Button 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4dp"
				android:background="@drawable/navigator_button_bg"
				android:text="V3"
				android:textColor="@android:color/white"
				android:textSize="11.52sp"
				android:gravity="center"
				android:onClick="singleClicked"/>
				
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="14dp"
				android:layout_alignParentRight="true"
				android:background="@drawable/play_button"
				android:onClick="playClicked"/>

		</LinearLayout>
			
	</RelativeLayout>


	<LinearLayout
	  android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:layout_height="match_parent">
